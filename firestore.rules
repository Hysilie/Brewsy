rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Configuration - lecture + écriture pour utilisateurs authentifiés
    // TEMPORAIRE: Pour l'initialisation. Après, vous pouvez remettre "write: if false"
    match /configs/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;  // ← Changé temporairement
    }

    // Données utilisateur - accès uniquement pour l'utilisateur propriétaire
    match /users/{uid}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
